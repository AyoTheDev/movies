<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/campus_card_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@drawable/ic_launcher_background" />

        <TextView
                app:layout_constraintStart_toStartOf="parent"
                style="@style/cardTitle"
                app:layout_constraintBottom_toTopOf="@id/tour_count"
                android:layout_marginStart="@dimen/campus_card_margin"
                android:layout_marginBottom="5dp"
                android:id="@+id/campus_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Character" />

        <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/campus_card_margin"
                android:layout_gravity="bottom"
                style="@style/cardSubTitle"
                android:id="@+id/tour_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Character"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                app:drawableStartCompat="@drawable/ic_compass" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
